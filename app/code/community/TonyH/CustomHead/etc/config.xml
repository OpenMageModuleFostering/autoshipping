<config>
    <modules>
        <TonyH_CustomHead>
            <version>1.0.2</version>
        </TonyH_CustomHead>
    </modules>
    <global>
        <models>
            <tonyh_customhead>
                <class>TonyH_CustomHead_Model</class>
            </tonyh_customhead>
        </models>
    </global>
    <frontend>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <tonyh_customhead_observer>
                        <type>model</type>
                        <class>tonyh_customhead/observer</class>
                        <method>changeImage</method>
                    </tonyh_customhead_observer>
                </observers>
            </checkout_cart_product_add_after>
        </events>
    </frontend>
</config>